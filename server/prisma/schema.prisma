enum Role {
  USER
  ADMIN
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  role     Role
  orders   Order[]
}

model Product {
  id           String  @id @default(uuid())
  product_name String  @unique
  price        Int
  image_url    String
  quantity     Int
  Order        Order[]
}

model Order {
  id         String  @id @default(uuid())
  user_id    String
  user       User    @relation(fields: [user_id], references: [id])
  product_id String
  product    Product @relation(fields: [product_id], references: [id])
  quantity Int
}
